ğŸ“„ Sample Jenkinsfile
pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t yourdockerhubusername/todo-app .'
            }
        }

        stage('Run Container') {
            steps {
                sh '''
                docker stop todo-container || true
                docker rm todo-container || true
                docker run -d -p 3000:3000 --name todo-container yourdockerhubusername/todo-app
                '''
            }
        }
    }
}

